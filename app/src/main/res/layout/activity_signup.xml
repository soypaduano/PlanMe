<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.planme.SignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:id="@+id/textView"
        android:layout_marginStart="26dp"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/et_nombre"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido: "
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="20dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de nacimiento: "
        android:id="@+id/textView3"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/et_apellido"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView2"
        android:textSize="18dp"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo: "
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textSize="18dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_nombre"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_apellido"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/et_nombre"
        android:layout_below="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_username"
        android:layout_alignStart="@+id/et_apellido"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginBottom="-10dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginTop="-5dp"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginRight="-20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_correo"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/et_username"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        android:layout_alignEnd="@+id/et_username" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefono:"
        android:id="@+id/textView20"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:layout_below="@+id/et_correo"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_telefono"
        android:layout_below="@+id/et_correo"
        android:layout_alignStart="@+id/et_correo"
        android:layout_marginTop="5dp"
        android:inputType="phone"
        android:layout_alignEnd="@+id/et_correo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sexo:"
        android:id="@+id/textView21"
        android:layout_below="@+id/et_telefono"
        android:layout_alignStart="@+id/textView20"
        android:textSize="18dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña: "
        android:id="@+id/textView26"
        android:layout_alignStart="@+id/textView21"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar:"
        android:id="@+id/textView27"
        android:layout_below="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:textSize="18dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_password"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:layout_below="@+id/textView21"
        android:layout_alignStart="@+id/et_telefono"
        android:layout_marginLeft="9dp"
        android:layout_alignEnd="@+id/et_telefono" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_passwd2"
        android:layout_alignEnd="@+id/et_password"
        android:layout_alignStart="@+id/et_password"
        android:layout_below="@+id/et_password"
        android:inputType="textPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createAcount"
        android:id="@+id/btn_registrate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:id="@+id/radioGroup"
        android:layout_toEndOf="@+id/textView20"
        android:orientation="horizontal"
        android:gravity="center_horizontal"><![CDATA[


            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

        ]]>

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mujer" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Hombre" />

    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/et_username"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sp_mes"
            android:layout_below="@+id/textView3"
            android:layout_alignEnd="@+id/et_username"
            android:layout_marginTop="3dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sp_dia"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sp_año"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/textView21" />
    </LinearLayout>

</RelativeLayout>
