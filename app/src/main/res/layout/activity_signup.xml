<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.planme.SignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/textView"
        android:layout_marginStart="26dp"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/et_nombre"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/surname"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="20dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birthday"
        android:id="@+id/textView3"
        android:textSize="18dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/et_apellido"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:id="@+id/textView5"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_nombre"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_apellido"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_correo"
        android:layout_marginTop="5dp"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/textView3"
        android:autoText="false"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/et_nombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:id="@+id/textView20"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:layout_below="@+id/et_correo"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_telefono"
        android:layout_below="@+id/et_correo"
        android:layout_marginTop="5dp"
        android:inputType="phone"
        android:layout_alignEnd="@+id/et_correo"
        android:layout_toEndOf="@+id/textView20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sex"
        android:id="@+id/textView21"
        android:layout_below="@+id/et_telefono"
        android:layout_alignStart="@+id/textView20"
        android:textSize="18dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:id="@+id/textView26"
        android:layout_alignStart="@+id/textView21"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:id="@+id/textView27"
        android:layout_below="@+id/textView26"
        android:layout_alignStart="@+id/textView26"
        android:textSize="18dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_password"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:layout_below="@+id/textView21"
        android:layout_marginLeft="9dp"
        android:layout_alignEnd="@+id/et_telefono"
        android:layout_toEndOf="@+id/textView26" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_password2"
        android:layout_alignEnd="@+id/et_password"
        android:layout_below="@+id/et_password"
        android:inputType="textPassword"
        android:layout_toEndOf="@+id/textView27" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/createAccount"
        android:id="@+id/btn_registrate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:id="@+id/radioGroup"
        android:layout_toEndOf="@+id/textView20"
        android:orientation="horizontal"
        android:gravity="center_horizontal"><![CDATA[


            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

        ]]>

        <RadioButton
            android:id="@+id/radioFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/woman"
            android:checked="false" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/man" />

    </RadioGroup>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp_año"
        android:layout_above="@+id/et_correo"
        android:layout_alignEnd="@+id/et_correo" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp_dia"
        android:layout_alignTop="@+id/sp_año"
        android:layout_toStartOf="@+id/sp_año" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp_mes"
        android:layout_alignTop="@+id/sp_dia"
        android:layout_toStartOf="@+id/sp_dia" />

</RelativeLayout>
