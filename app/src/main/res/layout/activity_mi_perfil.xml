<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.planme.MiPerfilActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mi perfil"
        android:id="@+id/Miperfil"
        android:layout_alignTop="@+id/btn_editarPerfil"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MiDescripcion"
        android:id="@+id/textView18"
        android:layout_marginTop="111dp"
        android:layout_below="@+id/tv_miNombre"
        android:layout_alignStart="@+id/tv_miDescripcion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edad:"
        android:id="@+id/MiEdad"
        android:layout_below="@+id/tv_miDescripcion"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MisPlanes"
        android:id="@+id/MisPlanes"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/tv_miEdad"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit profile"
        android:id="@+id/btn_editarPerfil"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_miNombre"
        android:layout_below="@+id/btn_editarPerfil"
        android:layout_alignParentStart="true"
        android:text="Sebastian" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_miDescripcion"
        android:text="Naci en caracas pero vivo en madrid me gusta el futbol"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_miEdad"
        android:text="21"
        android:layout_alignTop="@+id/MiEdad"
        android:layout_alignEnd="@+id/tv_miNombre" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_miFoto"
        android:layout_below="@+id/tv_miNombre"
        android:layout_alignStart="@+id/btn_editarPerfil"
        android:layout_marginTop="33dp" />

</RelativeLayout>
